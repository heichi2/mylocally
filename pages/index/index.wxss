.slides{
	height: 380rpx;
}

.slides image{
	width:750rpx;
	height: 380rpx;
}

.grids{
	background-color:#fff;
	display: flex;
	flex-wrap: wrap;
	margin-top:20rpx;
	border-top: 1rpx solid #f0f0f0;
	border-left: 1rpx solid #f0f0f0; 
}
.grids .item{
	display: flex;
	flex-direction:column;
	font-size:28rpx;
	justify-content: center;
	align-items: center;
	width:33.33333333%;
	height: 250rpx;
	box-sizing: border-box;
	border-right: 1rpx solid #f0f0f0;
	border-bottom: 1rpx solid #f0f0f0; 
}
.grids .item image{
	width:70rpx;
	height: 70rpx;
}

.links{
	margin-top:20rpx;
	margin-bottom: 20rpx;
	padding:20rpx 0;
	background-color: #fff;
	display: flex;
	justify-content: space-around;
}
.links image{
	width:320rpx;
	height: 180rpx;
}